# ===========================================
# UNIFIED ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values
# This file contains all environment variables for the entire monorepo

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server port (default: 3000)
PORT=3000

# CORS origins (comma-separated list of allowed origins)
# Include all your frontend URLs (web, client, production URLs)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Database connection string
DATABASE_URL=mongodb://localhost:27017/myDB

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# Better Auth secret key (generate a secure random string)
# Use: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# Better Auth URL (should match your server URL)
BETTER_AUTH_URL=http://localhost:3000

# ===========================================
# CLIENT CONFIGURATION (SvelteKit)
# ===========================================
# Public server URL (used by web and client apps)
# This is embedded at build time by SvelteKit
PUBLIC_SERVER_URL=http://localhost:3000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Show template documentation in development
SHOW_TEMPLATE_DOCS=true

# Node environment (development/production)
NODE_ENV=development