{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "@repo/shared-core": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6"
  }
}